global:
  scrape_interval: {{ prometheus_scrape_interval }}

scrape_configs:
  - job_name: 'otel-collector'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['{{ otlp_prometheus_exporter_url }}']

  - job_name: 'prometheus'
    static_configs:
      - targets: ['{{ prometheus_url }}']

